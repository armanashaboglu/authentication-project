<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Getir | Home</title>
  <link rel="icon" type="image/x-icon" href="favicon.ico">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
    crossorigin="anonymous"></script>
    <script>
      var message = "<%= message %>";
      console.log('we defined the message: ', message)
      $(document).ready(function () {
        if (message) {
          console.log('test')
          $("#toast-msg").toast('show');
        }
      });
    </script>

</head>

<body>
  <div class="toast-container" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast" id="toast-msg" role="alert" aria-live="assertive" aria-atomic="true" text-align="right">
      <div class="toast-header">
        <img src="https://cdn.getir.com/marketing/Getir_Logo_1621812382342.png" alt="Getir Logo" width="25" height="25">
        <strong class="me-auto" style="padding: 15px;"><i class="bi-globe"></i> Notification</strong>
        <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
      <% if (message !=null) { %>
        <div class="toast-body">
          <%= message %>
        </div>
        <% } %>
    </div>
  </div>
    <h1 class="logo">Example Home Panel</h1>
    <h2>You have succesfully logged in.</h2>

    <div class="card" style="top: 50%; position: left; margin-top: -159px;">
      <div class="card-body">
        <form action="/logout" method="get">
          <button type="submit" class="btn btn-primary mb-2" style="width:100%">Logout</button>
        </form>
      </div>
    </div>
</body>